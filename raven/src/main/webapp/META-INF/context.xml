<?xml version='1.0' encoding='utf-8'?>
<Context>

    <WatchedResource>WEB-INF/web.xml</WatchedResource>

    <Resource name="jdbc/inventory"
        auth="Container"
        type="javax.sql.DataSource"
        factory="org.apache.tomcat.jdbc.pool.DataSourceFactory" closeMethod="close"
        minEvictableIdleTimeMillis="60000" timeBetweenEvictionRunsMillis="30000"
        maxWait="20000"
        initialSize="0" minIdle="0" maxIdle="${raven.invadm.maxActive}" maxActive="${raven.invadm.maxActive}"
        username="${raven.invadm.username}" password="${raven.invadm.password}"
        driverClassName="org.postgresql.Driver" url="${raven.invadm.url}"
        removeAbandoned="false"
        testOnBorrow="true" validationQuery="select 123" />
    
</Context>
